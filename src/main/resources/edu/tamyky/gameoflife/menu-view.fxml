<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="460.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.tamyky.gameoflife.controllers.MenuController">
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Conway's Game of Life" textAlignment="CENTER" textOrigin="CENTER">
            <font>
                <Font size="35.0" />
            </font>
            <VBox.margin>
                <Insets bottom="30.0" />
            </VBox.margin>
        </Text>
        <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#startButtonPressed" text="Start" textAlignment="CENTER">
            <font>
                <Font name="Apple SD Gothic Neo Regular" size="19.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
            <effect>
                <Blend />
            </effect>
        </Button>
   <ChoiceBox fx:id="choiceBox" prefWidth="150.0">
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin>
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
   </ChoiceBox>
</VBox>
